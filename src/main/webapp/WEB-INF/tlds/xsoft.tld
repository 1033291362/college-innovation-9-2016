<?xml version="1.0" encoding="UTF-8" ?>

<taglib xmlns="http://java.sun.com/xml/ns/j2ee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-jsptaglibrary_2_0.xsd"
  version="2.0">
    
  <description>JSTL 1.1 functions library</description>
  <display-name>JSTL functions sys</display-name>
  <tlib-version>1.1</tlib-version>
  <short-name>xsoft</short-name>
  <uri>http://java.sun.com/jsp/jstl/functionss</uri>

	<!-- ChiroUtil -->
	<function>
		<description>获取当前登录用户对象</description>
		<name>getSysUser</name>
		<function-class>com.xsoft.base.utils.ShiroUtil</function-class>
		<function-signature>com.xsoft.base.shiro.ShiroUser getSysUser()</function-signature>
		<example>${xsoft:getSysUser()}</example>
	</function>
	<function>
		<description>获取当前登录姓名</description>
		<name>getSysUserName</name>
		<function-class>com.xsoft.base.utils.ShiroUtil</function-class>
		<function-signature>java.lang.String getSysUserName()</function-signature>
		<example>${xsoft:getSysUserName()}</example>
	</function>
	<function>
		<description>获取当前登录用户id</description>
		<name>getSysUserId</name>
		<function-class>com.xsoft.base.utils.ShiroUtil</function-class>
		<function-signature>java.lang.String getSysUserId()</function-signature>
		<example>${xsoft:getSysUserId()}</example>
	</function>
	<function>
		<description>获取当前登录用户企业id</description>
		<name>getSysComId</name>
		<function-class>com.xsoft.base.utils.ShiroUtil</function-class>
		<function-signature>java.lang.String getSysComId()</function-signature>
		<example>${xsoft:getSysComId()}</example>
	</function>
	<function>
		<description>获取当前用户的菜单对象列表</description>
		<name>getSysMenus</name>
		<function-class>com.xsoft.base.utils.ShiroUtil</function-class>
		<function-signature>java.lang.String getSysMenus()</function-signature>
		<example>${xsoft:getSysMenus()}</example>
	</function>
	
	<!-- Global -->
	<function>
		<description>获取当前登录用户对象</description>
		<name>getAdminPath</name>
		<function-class>com.xsoft.base.constant.Xsoft</function-class>
		<function-signature>java.lang.String getAdminPath()</function-signature>
		<example>${xsoft:getAdminPath()}</example>
	</function>

</taglib>