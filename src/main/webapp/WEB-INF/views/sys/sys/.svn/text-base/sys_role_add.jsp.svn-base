<%@ page language="java" contentType="text/html;charset=UTF-8" pageEncoding="UTF-8"%>
<%String basePath = request.getContextPath()+"/";%>
<div class="xwindow" id="role_win">
	<div class="cover"></div>
	<div class="xbox">
		<div class="title">角色表单</div>
		<form class="xform" id="role_form" method="post">
			<input type="hidden" name="id" id="role_id"/>
			<div class="xgroup">
				<label class="g1">用户名<i>*</i></label>
				<div class="g2">
					<input type="text" name="name"/>
				</div>
			</div>
			<div class="xgroup">
				<label class="g1">备注<i>*</i></label>
				<div class="g2">
					<textarea name="remark" style="width:210px;height:80px;resize:none"></textarea>
				</div>
			</div>
		</form>
		<div class="bottombar">
			<span class="xbtn btn_submit">保存</span><span class="xbtn xclose">取消</span>
		</div>
	</div>
</div>